#include <stdio.h>
#include <string.h>
int main (){
char aluno1[50];
float nota1;

char aluno2[50];
float nota2;

char aluno3[50];
float nota3, media;

printf("Digite o nome do primeiro aluno: ");
scanf("%s",&aluno1);
printf("Digite a nota do primeiro aluno: ");
scanf("%f",&nota1);
printf("Digite o nome do segundo aluno: ");
scanf("%s",&aluno2);
printf("Digite a nota do segundo aluno: ");
scanf("%f",&nota2);
printf("Digite o nome do terceiro aluno: ");
scanf("%s",&aluno3);
printf("Digite a nota do terceiro aluno: ");
scanf("%f",&nota3);

media = (nota1+nota2+nota3)/3;
printf("A media das notas dos alunos e: %2.f",media);

}
